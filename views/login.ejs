<%- include('./partials/header.ejs') %>
<%- include('./partials/heading.ejs') %>


    <h2 class="text-2xl text-center my-8 font-bold text-amber-50">Login</h2>

    <form action="/login" method="post" class="max-w-md mx-auto my-20">
        <div class="relative z-0 w-full mb-5 group">
            <input autocomplete="off type="text" name="username" id="username"
                class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-amber-50 focus:outline-none focus:ring-0 focus:border-amber-50  peer"
                placeholder=" " required />
            <label for="username"
                class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-amber-50  peer-focus:dark:text-amber-50  peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Username</label>
        </div>

        <div class="relative z-0 w-full mb-5 group">
            <input autocomplete="off type="text" name="password" id="password"
                class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-amber-50 focus:outline-none focus:ring-0 focus:border-amber-50  peer"
                placeholder=" " required />
            <label for="password"
                class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-amber-50  peer-focus:dark:text-amber-50  peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Password</label>
        </div>

        <button class="text-white bg-gradient-to-r from-cyan-500 to-green-500 hover:bg-gradient-to-bl focus:outline-none font-medium rounded text-sm px-5 py-2.5 text-center block mx-auto">Login</button>

        <p class="text-amber-50 my-6">Create an Account <a class="underline" href="/signup">Signup</a></p>    
    </form>


<%- include('./partials/footer.ejs') %>